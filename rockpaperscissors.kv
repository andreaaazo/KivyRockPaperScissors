#: import utils kivy.utils
MainWidget:

# PALETTE:
# text: #84a98c
# bg: #cad2c5
# cards: #2f3e46

<MainWidget>:
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.width, self.height

    BoxLayout:
        orientation: "horizontal"
        
        BoxLayout:  # USER CHOICE
            orientation: "vertical"
            size_hint: .2, .2
            pos_hint: {"center_y" : .5}
            spacing: 20
            Button:
                text: "A"
                size_hint: 0.25, 0.5
                pos_hint: {"center_x" : .5}
            Button:
                text: "B"
                size_hint: 0.25, 0.5
                pos_hint: {"center_x" : .5}
            Button:
                text: "C"
                size_hint: 0.25, 0.5
                pos_hint: {"center_x" : .5}

        BoxLayout:  # GAME
            orientation: "vertical"
            size_hint: .6, 1
            Label:
                size_hint: 1, .6
                text: "ROCK PAPER SCISSORS"
                color: 0, 0, 0
                font_name: "fonts/black.ttf"
                font_size: (root.width+root.height) / 50
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, .3
                Label:
                    text: "YOU"
                    color: 0, 0, 0
                    font_name: "fonts/bold.ttf"
                    font_size: (root.width+root.height) / 60
                Label:
                    size_hint: 1, 1
                Label:
                    text: "AI"
                    color: 0, 0, 0
                    font_name: "fonts/bold.ttf"
                    font_size: (root.width+root.height) / 60
            BoxLayout: 
                orientation: "horizontal"
                Button:
                    text:"D"
                Label:
                    text: "VS"
                    color: 0, 0, 0
                    font_name: "fonts/extrabold.ttf"
                    font_size: (root.width+root.height) / 50
                Button:
                    text: "E"
            RelativeLayout:
                size_hint: 1, .5
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#2f3e46")
                    RoundedRectangle:
                        radius: [25]
                        size: self.width, self.height/1.7
                        pos: self.width/2 - self.width/2, self.height / 2 - self.height/3.4

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 1
                    Label:
                        text: "1"
                        color: utils.get_color_from_hex("#84a98c")
                        font_name: "fonts/bold.ttf"
                        font_size: (root.width+root.height) / 50
                    Label:
                        text: "DRAW!"
                        color: utils.get_color_from_hex("#84a98c")
                        font_name: "fonts/extrabold.ttf"
                        font_size: (root.width+root.height) / 50
                    Label:
                        text: "13"
                        color: utils.get_color_from_hex("#84a98c")
                        font_name: "fonts/bold.ttf"
                        font_size: (root.width+root.height) / 50
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, .5
                RelativeLayout:
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#2f3e46")
                        RoundedRectangle:
                            radius: [30]
                            size: self.width*0.8, self.height*0.5
                            pos: self.width / 2 - self.width*0.8/2, self.height / 2 - self.height*0.5/2
                    Label:
                        text: "x9"
                        color: utils.get_color_from_hex("#84a98c")
                        font_name: "fonts/bold.ttf"
                        font_size: (root.width+root.height) / 50

                Label:
                    size_hint: 1, 1

                RelativeLayout:
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#2f3e46")
                        RoundedRectangle:
                            radius: [30]
                            size: self.width*0.8, self.height*0.5
                            pos: self.width / 2 - self.width*0.8/2, self.height / 2 - self.height*0.5/2
                    Label:
                        text: "x14"
                        color: utils.get_color_from_hex("#84a98c")
                        font_name: "fonts/bold.ttf"
                        font_size: (root.width+root.height) / 50

        BoxLayout:  # SPACING
            size_hint: .2, 1